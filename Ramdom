<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Will you be my Valentine?</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #ffe6e9; /* Cute pink background */
            font-family: "Arial", sans-serif;
            overflow: hidden; 
        }

        .container {
            text-align: center;
            position: relative;
        }

        .header_text {
            font-size: 2rem;
            color: #d32f2f;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .gif_container img, .gif_container video {
            width: 100%;
            max-width: 280px; /* Keeps the bear a good size on mobile */
            height: auto;
            border-radius: 15px;
            margin-bottom: 20px;
        }

        .btn-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            flex-wrap: wrap; 
            align-items: center;
            transition: all 0.3s ease;
        }

        .btn {
            padding: 15px 30px;
            font-size: 1.2rem;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            transition: all 0.3s ease;
            white-space: nowrap; /* Keeps text on one line */
        }

        #yesBtn {
            background-color: #4CAF50; 
            color: white;
            font-weight: bold;
            z-index: 10; /* Ensures Yes button stays on top */
        }

        #noBtn {
            background-color: #f44336; 
            color: white;
            font-weight: bold;
        }

        /* Success Page hidden by default */
        #success-screen {
            display: none; 
        }
    </style>
</head>
<body>

    <div class="container" id="question-screen">
        <div class="gif_container">
            <img id="mainGif" src="https://media.tenor.com/f1XJj1w9vnoAAAAi/mocha-bear.gif" alt="Cute bear">
        </div>
        
        <h1 class="header_text">Will you be my Valentine?</h1>
        
        <div class="btn-container">
            <button class="btn" id="yesBtn" onclick="nextPage()">Yes</button>
            <button class="btn" id="noBtn" onclick="moveButton()">No</button>
        </div>
    </div>

    <div class="container" id="success-screen">
        <h1 class="header_text">I knew it! üòç</h1>
        <div class="gif_container">
            <video src="video.mp4" autoplay loop muted playsinline></video>
        </div>
    </div>

    <script>
        const yesBtn = document.getElementById("yesBtn");
        const noBtn = document.getElementById("noBtn");
        const mainGif = document.getElementById("mainGif");

        // List of texts for the "No" button
        const messages = [
            "Are you sure?",
            "Really sure??",
            "Are you positive?",
            "Pookie please...",
            "Just think about it!",
            "If you say no, I will be really sad...",
            "I will be very very very sad...",
            "Ok fine, I will stop...",
            "Just kidding, please say yes!",
            "I will be so sad...",
            "You are breaking my heart ;("
        ];

        // List of GIFs to show when they click "No"
        const gifs = [
            "https://media.tenor.com/K2s46_32lMQAAAAi/mocha-bear-sad.gif",        
            "https://media.tenor.com/J1hF7j1FwXkAAAAi/mocha-bear-cry.gif",        
            "https://media.tenor.com/B4-PjQk8yAQAAAAi/mocha-bear-hug.gif",        
            "https://media.tenor.com/t34yW5iTz8QAAAAi/sad-cry.gif",               
            "https://media.tenor.com/2b2m4f8LzK8AAAAi/sad-bear-cry.gif"           
        ];

        let messageIndex = 0;
        let currentSize = 1.2; 

        function moveButton() {
            // 1. Change Text
            noBtn.innerText = messages[messageIndex % messages.length];
            
            // 2. Change GIF
            const gifIndex = Math.min(messageIndex, gifs.length - 1);
            mainGif.src = gifs[gifIndex];

            // 3. Grow Yes Button
            currentSize = currentSize * 1.5; 
            yesBtn.style.fontSize = `${currentSize}rem`;
            yesBtn.style.padding = `${currentSize}rem ${currentSize * 2}rem`; 
            
            messageIndex++;
        }

        function nextPage() {
            document.getElementById("question-screen").style.display = "none";
            document.getElementById("success-screen").style.display = "block";
        }
    </script>

</body>
</html>

